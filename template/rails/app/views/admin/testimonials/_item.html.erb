<% status_hash = {published: "success", unpublished: "default", deleted: "danger"} %>

<div class="panel panel-default media p-5 <%= status_hash[testimonial.status.to_sym] %>" style="margin-bottom:10px;">

  <a class="media-left" href="#" style="width:20%;">
    <%= display_image(testimonial, "picture.image.small.url", width: "auto", height: "100px") %>
  </a>
  <div class="media-body">
    <%= theme_item_title(testimonial.name, admin_testimonial_path(testimonial)) %>
    <span class="ml-5 mt-5 label label-<%= status_hash[testimonial.status.to_sym] %>"><%= testimonial.status.titleize %></span>
    <%= clear_tag %>
    
    <%= theme_item_sub_title(testimonial.designation) %>
    <%= theme_item_description(testimonial.organisation) %>
  </div>

</div>



