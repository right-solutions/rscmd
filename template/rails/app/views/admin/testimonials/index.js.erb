<% if @testimonials.any? %>
  // Fill the right box with first testimonial details in the list
  $('#div_testimonial_show').html("<%= escape_javascript(render(:partial=>'show')) %>");
  $('#div_testimonial_details').html("<%= escape_javascript(render(:partial=>'details')) %>");
  $('#div_testimonial_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
  $('#div_testimonial_drop_down').html("<%= escape_javascript(theme_drop_down(@testimonials, :name))%>");
<% else %>
  var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
  $('#div_testimonial_index').html(noResultsText);
  $('#div_testimonial_show').html(noResultsText);
  $('#div_testimonial_details').html("");
<% end %>