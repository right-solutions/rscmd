<% if @users.any? %>
  // Fill the right box with first user details in the list
  $('#div_user_show').html("<%= escape_javascript(render(:partial=>'show')) %>");
  $('#div_user_details').html("<%= escape_javascript(render(:partial=>'details')) %>");
  $('#div_user_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
  $('#div_user_drop_down').html("<%= escape_javascript(theme_drop_down(@users, :name))%>");
<% else %>
  var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
  $('#div_user_index').html(noResultsText);
  $('#div_user_show').html(noResultsText);
  $('#div_user_details').html("");
<% end %>