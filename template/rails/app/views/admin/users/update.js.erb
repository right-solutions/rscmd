<% if @user.errors.blank? %>
  // Fill the right box with first item details
  $('#div_user_show').html("<%= escape_javascript(render(:partial=>"show")) %>");
  $('#div_user_details').html("<%= escape_javascript(render(:partial=>'details')) %>");
  
  // Refresh the updated item in the list
  $("#div_user_<%= @user.id %>").html("<%= escape_javascript(render :partial => 'item', :locals => { :user => @user }) %>")
  $(".panel-message").hide();
<% else %>
  $('#div_user_show').html("<%= escape_javascript(render(:partial=>'form')) %>");
  validateUserForm();

  // Populate Server Side Errors
  <%
    text = "You have few errors. They have been highlighted."
    error_message = content_tag(:div, text, class: "alert alert-danger")
  %>
  $("#user_form_error").html("<%= escape_javascript(error_message) %>");
<% end %>
